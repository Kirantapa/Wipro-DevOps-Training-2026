pipeline {
    agent any
    tools{
        jdk 'jdk21'
        maven 'maven'
    }
 

    stages {
        stage('git checkout') {
            steps {
                git 'https://github.com/ranjanaraviraj2003-ctrl/maven-web-application.git'
            }
        }
        stage('biuld maven'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('deploy to war'){
            steps{
                withMaven(globalMavenSettingsConfig: 'nexus-credentials', jdk: 'jdk21', maven: 'maven', traceability: true) {
                sh 'mvn deploy'
                }
            }
        }
    }
}